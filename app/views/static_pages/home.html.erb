<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <h1><%= current_user.name %></h1>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="learn-form">
      <%= render "shared/learn_form" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "home_title" %></h1>
    <%= link_to t("signup_button"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
