<% provide(:title, t("signup_title")) %>
<h1><% t "signup_title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>
     
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("pass_confirm ") %>
      <%= f.password_field :password_confirmation %>
     
      <%= f.submit  t("account_submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
